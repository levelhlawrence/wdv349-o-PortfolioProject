{
  "compilerOptions": {
    /* - - Base Options - - */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",

    "resolveJsonModule": true,
    "moduleDetection": "force",

    /* - - Node Options - - */
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "outDir": "./dist",
    "sourceMap": true,
    "lib": ["es2022"]
  }
}
